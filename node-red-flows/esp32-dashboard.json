    {
        "id": "parse-rfid-data",
        "type": "function",
        "z": "main-flow",
        "name": "Parse RFID",
        "func": "// Parse RFID scan data\nvar data = msg.payload;\nif (data.uid && data.count) {\n    var displayText = 'UID: ' + data.uid + ' (Scan #' + data.count + ')';\n    msg.payload = displayText;\n    \n    // Store latest RFID in context\n    context.set('lastRFID', {\n        uid: data.uid,\n        count: data.count,\n        timestamp: new Date().toISOString()\n    });\n}\nreturn msg;",
        "outputs": 1,
        "x": 350,
        "y": 200,
        "wires": [["rfid-text"]]
    },
