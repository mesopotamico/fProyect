    {
        "id": "parse-temp-logs",
        "type": "function",
        "z": "main-flow",
        "name": "Parse Temperature Logs",
        "func": "// Parse temperature logs for chart\nvar logs = msg.payload.logs || [];\nvar chartData = [];\n\nfor (var i = 0; i < logs.length; i++) {\n    var log = logs[i];\n    chartData.push({\n        x: new Date(log.timestamp).getTime(),\n        y: log.temperature || 0\n    });\n}\n\n// Sort by timestamp\nchartData.sort(function(a, b) { return a.x - b.x; });\n\nmsg.payload = [{\n    series: ['Temperature'],\n    data: [chartData],\n    labels: ['']\n}];\n\nreturn msg;",
        "outputs": 1,
        "x": 580,
        "y": 600,
        "wires": [["temp-chart"]]
    },
