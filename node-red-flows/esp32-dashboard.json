    {
        "id": "parse-button-events",
        "type": "function",
        "z": "main-flow",
        "name": "Parse Button Events",
        "func": "// Parse button events\nvar data = msg.payload;\nvar eventText = '';\n\nif (data.device && data.button_id) {\n    eventText = data.device + ' Button ' + data.button_id + ' pressed';\n    \n    // Create notification\n    var notification = {\n        payload: {\n            title: 'Button Pressed!',\n            message: eventText,\n            time: new Date().toLocaleTimeString()\n        }\n    };\n    \n    node.send([{payload: eventText}, notification]);\n}\n\nreturn null;",
        "outputs": 2,
        "x": 350,
        "y": 700,
        "wires": [["button-events-text"], ["button-notification"]]
