    {
        "id": "parse-api-status",
        "type": "function",
        "z": "main-flow",
        "name": "Parse API Status",
        "func": "// Parse status from Rust API\nvar status = msg.payload;\nvar statusText = '';\n\nif (status.wifi_connected) {\n    statusText += 'üì∂ WiFi: Connected (' + status.ssid + ')\\n';\n} else {\n    statusText += 'üì∂ WiFi: Disconnected\\n';\n}\n\nstatusText += 'üå°Ô∏è Temp: ' + status.temperature.toFixed(1) + '¬∞C\\n';\nstatusText += 'üíß Humidity: ' + status.humidity.toFixed(1) + '%\\n';\nstatusText += 'üïí Updated: ' + new Date().toLocaleTimeString();\n\nmsg.payload = statusText;\nreturn msg;",
        "outputs": 1,
        "x": 550,
        "y": 500,
        "wires": [["status-text"]]
    },
